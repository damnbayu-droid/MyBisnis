generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  user_id     String   @id @default(cuid())
  name        String
  email       String   @unique
  whatsapp    String?
  role        String   // 'pembeli', 'penjual', 'pengirim', 'admin'
  status      String   @default("active") // 'active', 'blocked'
  lokasi      String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  stores      Store[]
  couriers    Courier[]
  sentMessages    Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  @@map("users")
}

model Store {
  store_id          String   @id @default(cuid())
  owner_user_id     String
  nama_toko         String
  jenis_toko        String?
  deskripsi         String?
  link_toko         String   @unique
  payment_qris      Boolean  @default(false)
  payment_transfer  Boolean  @default(false)
  payment_cash      Boolean  @default(false)
  payment_rekening  String?
  verified          Boolean  @default(false)
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  // Relations
  owner             User       @relation(fields: [owner_user_id], references: [user_id], onDelete: Cascade)
  products          Product[]

  @@map("stores")
}

model Product {
  product_id      String   @id @default(cuid())
  store_id        String
  nama_produk     String
  harga           Float
  foto            String?
  jenis_produk    String?
  keterangan      String?
  kuantitas       Int?
  jumlah_klik     Int      @default(0)
  jumlah_order    Int      @default(0)
  status          String   @default("active") // 'active', 'inactive'
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // Relations
  store           Store     @relation(fields: [store_id], references: [store_id], onDelete: Cascade)

  @@map("products")
}

model Courier {
  courier_id           String   @id @default(cuid())
  user_id              String
  tipe                 String   // 'ompreng', 'bentor', 'deliv', 'roda4'
  kendaraan            String?
  zona                 String?
  latitude             Float?
  longitude            Float?
  online               Boolean  @default(false)
  pendapatan_harian    Float    @default(0)
  target_pengantaran   Int?
  kilometer_harian      Float?
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt
  foto_driver          String?
  foto_kendaraan       String?
  foto_plat_nomor      String?
  foto_stnk            String?

  // Relations
  user                 User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@map("couriers")
}

model Message {
  id                   String   @id @default(cuid())
  sender_id             String
  receiver_id           String
  content               String
  read                 Boolean  @default(false)
  created_at            DateTime @default(now())

  // Relations
  sender               User?    @relation("SentMessages", fields: [sender_id], references: [user_id])
  receiver              User?    @relation("ReceivedMessages", fields: [receiver_id], references: [user_id])

  @@map("messages")
}